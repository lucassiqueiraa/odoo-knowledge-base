<!-- Arquivo: views/maintenance_equipment_views.xml -->
<odoo>
    <record id="maintenance_equipment_view_form_inherit_history" model="ir.ui.view">
        <field name="name">maintenance.equipment.form.inherit.history</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Histórico de Manutenções" name="maintenance_history">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance_history" type="object"
                                class="oe_stat_button" icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Manutenções"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="maintenance_hours" widget="float_time"/>
                            <field name="maintenance_material_cost" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <field name="maintenance_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="stage_id"/>
                            <field name="maintenance_type"/>
                            <field name="request_date"/>
                            <field name="close_date"/>
                            <field name="user_id"/>
                            <field name="total_hours_spent" widget="float_time"/>
                            <field name="consumo_realizado"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Visualização detalhada da manutenção -->
    <record id="maintenance_request_view_form_inherit_detailed" model="ir.ui.view">
        <field name="name">maintenance.request.form.inherit.detailed</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Checklist" name="checklist">
                    <field name="checklist_execution_ids">
                        <tree editable="bottom">
                            <field name="item_description"/>
                            <field name="is_done"/>
                        </tree>
                    </field>
                </page>

                <page string="Materiais Utilizados" name="materials">
                    <field name="material_line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_cost"/>
                            <field name="total_cost" sum="Total"/>
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer">
                        <field name="consumo_realizado" widget="boolean_toggle"/>
                        <button name="action_lancar_consumo" string="Lançar Consumo"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('consumo_realizado', '=', True)]}"/>
                    </group>
                </page>

                <page string="Registro de Horas" name="timesheets">
                    <group>
                        <field name="total_hours_spent" widget="float_time"/>
                    </group>
                    <field name="timesheet_ids">
                        <tree editable="bottom">
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="hours" widget="float_time" sum="Total"/>
                            <field name="description"/>
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer">
                        <button name="action_open_timesheets" string="Adicionar Horas"
                                type="object" class="oe_highlight"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Visualização Kanban para histórico de manutenção rápido -->
    <record id="maintenance_request_view_kanban_history" model="ir.ui.view">
        <field name="name">maintenance.request.kanban.history</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="maintenance_type"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="total_hours_spent"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.maintenance_type.raw_value == 'corrective'">
                                            <i class="fa fa-wrench"/> Corretiva
                                        </span>
                                        <span t-else="">
                                            <i class="fa fa-calendar"/> Preventiva
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="total_hours_spent" widget="float_time"/>
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                             t-att-title="record.user_id.value" width="24" height="24"
                                             class="oe_kanban_avatar float-right" alt="Imagem user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>